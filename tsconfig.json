{
    "compilerOptions": {
      "outDir": "dist",
      "checkJs": false,
      "declaration": true,
      "target": "ES2020",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "paths": {
        "@": ["./src"],
        "@/*": ["./src/*"]
      }
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "include": ["index.ts", "global.d.ts", "src"],
    "exclude": [
      "src/index",
      "src/main.tsx",
      "src/reportWebVitals.ts",
      "src/**/**.test.tsx",
      "src/**/**.test.ts",
      "src/**/examples/**",
      "src/**/**.stories.ts",
      "src/**/**.stories.tsx",
      "src/setupTests.ts"
    ]
  }
  